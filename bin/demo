#!/bin/bash

# File for testing bash stuff
# 20160525/SDAA

usage(){
	echo "Usage: $0 <param1> <param2>"
	exit 1
}

if [ ${#*} != 2 ];then
    usage
fi

myArray=(${*})
echo "* ${*}"
echo "# ${#*}"
echo "#@ ${#@}"
echo "myArray ${myArray[0]}"
echo "\${0} ${0} \${1} ${1}"

for i in ${myArray[@]};do
    echo "In the loop $i"
done
    
for i in ${*};do
    echo "In the other loop $i"
 done

#Test av select
PS3="Svara på frågan: "
select value in 1 2 3 4;do
    [[ -n $value ]] && echo "You selected: ${value}" && break
    echo "Select a number [1-4]."
done

#Looping
i=0
while ((( i < 10 )));do
    printf "This is i: ${i} $((i++)) and ${((++i))\n"
done
