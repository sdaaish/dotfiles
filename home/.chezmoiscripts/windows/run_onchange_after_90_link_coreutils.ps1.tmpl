    "unexpand",
    "uniq",
    "unlink",
    "vdir",
    "wc",
    "yes",
    "coreutils"
)

# Test and install if administrator
$ErrorActionPreference = "Continue"
Write-Verbose "Running as Administrator, linking uutils..."
Write-Host "Starting loop"
foreach ($util in $coreutils){
    $prg = "{0}.exe" -f $util
    New-Item -Path $link -Name $prg -ItemType SymbolicLink -Value $coreutilsexe -Force
    Write-Verbose "Linking $util"
}

