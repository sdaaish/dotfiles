# Install Linux utilities from Github.

{{ if eq .chezmoi.os "linux" -}}

# Age encryption tool
[".local/bin/age"]
    type = "archive-file"
    url = "https://github.com/FiloSottile/age/releases/download/{{ .ageVersion }}/age-{{ .ageVersion }}-{{.chezmoi.os }}-{{ .chezmoi.arch }}.tar.gz"
    path = "age/age"
    checksum.sha256 = "7df45a6cc87d4da11cc03a539a7470c15b1041ab2b396af088fe9990f7c79d50"
    refreshPeriod = "168h"

# Signing tool
[".local/bin/minisign"]
    type = "archive-file"
    url = "https://github.com/jedisct1/minisign/releases/download/{{ .minisignVersion }}/minisign-{{ .minisignVersion }}-{{.chezmoi.os }}.tar.gz"
    path = "minisign-linux/x86_64/minisign"
    checksum.sha256 = "9a599b48ba6eb7b1e80f12f36b94ceca7c00b7a5173c95c3efc88d9822957e73"
    refreshPeriod = "168h"
{{end}}
